@namespace Shipwreck.ViewModelUtils.Components
@inherits BindableComponentBase<ISelectable>
@using (OnBeginRender())
{
    <td @attributes="@AdditionalAttributes">
        <Checkbox @bind-IsChecked="@DataContext.IsSelected" />
    </td>
}
@code
{
    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object> AdditionalAttributes { get; set; }

    protected override bool OnDataContextPropertyChanged(string propertyName)
    {
        switch (propertyName)
        {
            case nameof(DataContext.IsSelected):
                return true;
        }
        return false;
    }
}
