<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Shipwreck.ViewModelUtils.Demo.Maui.InteractionPage"
    xmlns:vmu="http://schema.shipwreck.jp/viewmodel-utils/"
    xmlns:local="clr-namespace:Shipwreck.ViewModelUtils.Demo.Maui"
    Title="InteractionPage"
    x:DataType="{x:Type local:InteractionPageViewModel}">
    <ScrollView>
        <VerticalStackLayout
            BindableLayout.ItemsSource="{Binding Commands}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <vmu:CommandButton />
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>